# Instagram Accounts (comma-separated)
IG_ACCOUNTS=user1:pass1:2fa_secret1,user2:pass2:2fa_secret2

# Proxy Configuration
PROXY_POOL_SIZE=100
PROXY_ROTATION_INTERVAL=300
PROXY_PROVIDERS=smartproxy,brightdata,oxylabs
PROXY_API_KEY=your_proxy_api_key
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Database
DATABASE_URL=postgresql://igbot:password@localhost:5432/igbot2025
MONGODB_URL=mongodb://localhost:27017/igbot2025
REDIS_URL=redis://localhost:6379/0

# API Keys
OPENAI_API_KEY=sk-your-openai-key
SENTRY_DSN=https://your-sentry-dsn

# Dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000
DASHBOARD_SECRET_KEY=generate-a-secure-random-key-here
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change-this-password

# Scheduling
TIMEZONE=America/Los_Angeles
PEAK_HOURS_START=10
PEAK_HOURS_END=21
ACTIONS_PER_HOUR_MIN=30
ACTIONS_PER_HOUR_MAX=60

# Anti-Ban Settings
ENABLE_HUMAN_SIMULATION=true
WARMUP_PERIOD_DAYS=14
MAX_FOLLOWS_PER_DAY=200
MAX_LIKES_PER_DAY=500
MAX_COMMENTS_PER_DAY=50
SHADOWBAN_DETECTION=true

# Content Generation
AUTO_REMIX_REELS=true
FYP_OPTIMIZATION=true
HASHTAG_RESEARCH=true

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Emergency Controls
KILL_SWITCH_ENABLED=false
AUTO_PAUSE_ON_ANOMALY=true
MAX_BAN_RISK_SCORE=75

# Deployment
ENVIRONMENT=production
DEPLOY_REGION=us-west-2
SCALE_REPLICAS=10
